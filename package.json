{
    "name": "guardian-ai-crm",
    "private": true,
    "version": "0.0.1",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "test": "vitest",
        "test:coverage": "vitest --coverage",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 350",
        "lint:fix": "eslint . --ext ts,tsx --fix",
        "lint:tsc": "tsc --noEmit",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "quality": "npm run lint:tsc && npm run lint && npm run format:check",
        "quality:fix": "npm run lint:fix && npm run format",
        "lint:role": "bash scripts/lint-api-role-usage.sh",
        "verify:role": "bash scripts/verify-api-role-usage.sh",
        "verify:jwt": "npx tsx scripts/verify-jwt-custom-claims.ts",
        "verify:all": "bash scripts/verify-role-cleanup.sh && bash scripts/verify-api-role-usage.sh && npm run verify:jwt",
        "prepare": "husky",
        "build:analyze": "npm run build && node scripts/build-analyzer.js",
        "build:production": "NODE_ENV=production npm run build",
        "performance:test": "npm run build && npm run build:analyze"
    },
    "dependencies": {
        "@google/genai": "^1.17.0",
        "@headlessui/react": "^2.2.9",
        "@heroicons/react": "^2.2.0",
        "@hookform/resolvers": "^5.2.2",
        "@supabase/supabase-js": "^2.43.4",
        "@types/qrcode": "^1.5.5",
        "@types/react-helmet": "^6.1.11",
        "chart.js": "^4.5.0",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "date-fns": "^4.1.0",
        "dotenv": "^17.2.3",
        "lucide-react": "^0.544.0",
        "qrcode": "^1.5.4",
        "react": "^19.1.1",
        "react-chartjs-2": "^5.3.0",
        "react-dom": "^19.1.1",
        "react-helmet-async": "^2.0.5",
        "react-hook-form": "^7.63.0",
        "react-hot-toast": "^2.6.0",
        "react-is": "^19.2.0",
        "react-router-dom": "^6.23.1",
        "recharts": "^3.2.1",
        "tailwind-merge": "^3.3.1"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.0.0",
        "@types/node": "^20.19.19",
        "@types/react": "^18.3.3",
        "@types/react-dom": "^18.3.0",
        "@types/react-router-dom": "^5.3.3",
        "@typescript-eslint/eslint-plugin": "^8.45.0",
        "@typescript-eslint/eslint-plugin-tslint": "^7.0.2",
        "@typescript-eslint/parser": "^8.45.0",
        "@vitejs/plugin-react": "^5.0.2",
        "autoprefixer": "^10.4.19",
        "eslint": "^8.57.1",
        "eslint-import-resolver-typescript": "^4.4.4",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^6.1.0",
        "eslint-plugin-react-refresh": "^0.4.23",
        "eslint-plugin-security": "^3.0.1",
        "glob": "^11.0.3",
        "husky": "^9.1.7",
        "jsdom": "^24.1.3",
        "postcss": "^8.4.38",
        "prettier": "^3.6.2",
        "supabase": "^1.226.4",
        "tailwindcss": "^3.4.3",
        "terser": "^5.44.0",
        "typescript": "^5.4.5",
        "vite": "^7.1.5",
        "vitest": "^3.2.4"
    },
    "engines": {
        "node": ">=20.19.0"
    }
}
